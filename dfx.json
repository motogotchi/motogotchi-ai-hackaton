{
  "canisters": {
    "main": {
      "type": "motoko",
      "main": "src/backend/main.mo",
      "args": "--enhanced-orthogonal-persistence"
    },
    "frontend": {
      "type": "assets",
      "dependencies": ["main"],
      "frontend": { "entrypoint": "src/frontend/index.html" },
      "build": ["cd src/frontend && pnpm build"],
      "source": ["src/frontend/dist"]
    }
  },
  "defaults": {
    "build": {
      "packtool": "mops sources",
      "args": ""
    }
  },
  "output_env_file": ".env",
  "version": 1
}
